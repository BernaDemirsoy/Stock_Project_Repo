@using StockProject.Entities.Entities;
@model IEnumerable<StockProject.Entities.Entities.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

 <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                               
                                <strong class="card-title">Kategori Listesi
                            <a class="btn btn-secondary ms-4" asp-controller="Category" asp-action="AddCategory">Kategori Ekle</a>
                                    </strong>
                                
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Kategori Adı</th>
                                            <th>Açıklama</th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       
                                            @{
                                             int rowcount = 1;
                                             }
                                            @foreach (Category item in Model)
                                            {
                                                <tr>
                                                    <th scope="row">@rowcount</th>
                                                    <td>@item.CategoryName</td>
                                                    <td>@item.Description</td>
                                                    <td>
                                                        <a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Güncelle</a>

                                                    <a asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                                                    </td>
                                                    
                                </tr>
                                rowcount++;
                            }
                                        
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div><!-- .animated -->


